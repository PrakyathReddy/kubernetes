$ k replace --force -f edited-yaml-file.yml

run custom arguments $ k run <pod> --image=<image> -- <arg1> <arg2> <arg3>

$ k run <pod> --image=<image> --command -- <cmd> <arg1> <arg2>

create config map imperatively
$ k create configmap <configname> --from-literal=<key>=<value> --from-literal=<key>=<value>