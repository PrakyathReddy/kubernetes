$ k replace --force -f edited-yaml-file.yml

run custom arguments $ k run <pod> --image=<image> -- <arg1> <arg2> <arg3>

$ k run <pod> --image=<image> --command -- <cmd> <arg1> <arg2>

create config map imperatively
$ k create configmap <configname> --from-literal=<key>=<value> --from-literal=<key>=<value>

$ k get pods --watch

$ k get logs -f <pod-name> <container-name-if-more-than-one>

$ k drain node-1 # kills the pods on this node and schedules them on remaining ones
$ k cordon node-1 # makes the node unschedulable for upcoming pods. Does not terminate any existing pods